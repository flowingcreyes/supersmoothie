<html>
	<head>
		<title>SuperSmoothie</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="../css/main.css" />
		<noscript><link rel="stylesheet" href="../css/noscript.css" /></noscript>
		<style>
			body{
			background-color: #f1f799;
			}
			  img {
				  height: 25%;
				  width: 29%;
				  border-radius: 22px;
			  }
			  section, p {
				  font-weight: bold;
			  }
			  </style>
	</head>
	<body class="is-preload">
		<!-- Wrapper -->
			<div id="wrapper">

				<%- include ('../static/partials/header.ejs') %>

				<%- include ('../static/partials/navbar.ejs') %>


				<!-- Main -->
					<div id="main">
						<div class="inner">
							<h1>YouSmoothie</h1>
							<span class="image main"></span>
							<div class="inner">
								<header>
									<h2> <%= bananaSmoothies.name %>  </h2>
								</header>
								<section>
                  <p>
                    <img src=<%=bananaSmoothies.source %> alt="banana smoothie image">

                  </p>
                  <p>
                    <h3>INGREDIENTS:</h3><%= bananaSmoothies.ingredients %>
					
				</p>
				-
                  <p>
                    <h3>RECIPE:</h4><%= bananaSmoothies.recipe %>

				  </p>
				  -

                  <p>
                    <h3>CALORIES:</h3><%= bananaSmoothies.calories %>
				  </p>
				  -
				  <form action="/yousmoothie/smoothieemail" id="email_form" method="post" target="hiddenFrame">
					send this smoothie to your email:
					<input id="email" type="email" name="emailaddress">
					<input id="smoothie_name" name="smoothie_name" value="<%= bananaSmoothies.name %>" type="hidden">
					<input id="smoothie_ingredients" name="smoothie_ingredients" value="<%= bananaSmoothies.ingredients %>" type="hidden">
					<input id="smoothie_recipe" name="smoothie_recipe" value="<%= bananaSmoothies.recipe %>" type="hidden">
					<input id="smoothie_calories" name="smoothie_calories" value="<%= bananaSmoothies.calories %>" type="hidden">
					<input id="email_button" type="submit">
				  </form>
                </section>
						</div>
					</div>

			<!-- Footer -->
			<%- include ('../static/partials/footer.ejs') %>


	</div>

<!-- Scripts -->
<%- include ('../static/partials/scripts.ejs') %>

</body>
</html>