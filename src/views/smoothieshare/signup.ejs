<html>

<head>
  <title>SuperSmoothie</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <link rel="stylesheet" href="../css/main.css" />
  <noscript><link rel="stylesheet" href="../css/noscript.css" /></noscript>
  <style>
    img {
      height: 25%;
      width: 29%;
      border-radius: 22px;
    }

    section,
    p {
      font-weight: bold;
    }
  </style>
</head>

<body class="is-preload">
  <%- include ('../static/partials/messages.ejs') %>

    <!-- Wrapper -->
    <div id="wrapper">

      <%- include ('../static/partials/header.ejs') %>

        <%- include ('../static/partials/navbar.ejs') %>

          <!-- Main -->
          <div id="main">
            <form action="/users" method="post">
              <div class="email">
                <label for="email">Email</label>
                <input class="email_class" type="text" name="email" placeholder="email">
              </div>
              <div class="password">
                <label for="password">Password</label>
                <input class="password_class" type="password" name="password" placeholder="password">
              </div>
              <div class="password">
                <label for="passwordConfirmation">Password confirmation</label>
                <input class="password_class" type="password" name="passwordConfirmation" placeholder="confirm password">
              </div>
              <input class="create_account" type="submit" value="Create Account">
            </form>
          </div>

          <!-- Footer -->
          <%- include ('../static/partials/footer.ejs') %>

    </div>

    <!-- Scripts -->
    <%- include ('../static/partials/scripts.ejs') %>

</body>

</html>