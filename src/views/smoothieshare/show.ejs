<html>

<head>
  <title>SuperSmoothie</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <link rel="stylesheet" href="../css/main.css" />
  <noscript><link rel="stylesheet" href="../css/noscript.css" /></noscript>
  <style>
    img {
      height: 25%;
      width: 29%;
      border-radius: 22px;
    }

    section,
    p {
      font-weight: bold;
    }

    #main {
      text-align: center;
    }
  </style>
</head>

<body class="is-preload">
  <%- include ('../static/partials/messages.ejs') %>

    <!-- Wrapper -->
    <div id="wrapper">

      <%- include ('../static/partials/header.ejs') %>

        <%- include ('../static/partials/navbar.ejs') %>

          <!-- Main -->
          <div id="main">
            <a href="/smoothieshare">
              <h1>SmoothieShare</h1>
            </a>

            <h1>
              <%=subject.title %>
            </h1>
            <br>
            <br>
            <p>
              <%- subject.description %>
            </p>
            <p style="font-weight: bold;">
              <% if(currentUser) {%>

                posted by:
                <%= currentUser.email %>
                  <% }%>
            </p>
            <% if(currentUser && (currentUser.id == subject.userId || currentUser.isAdmin())) { %>
              <button class="edit_subject"><a href="/smoothieshare/<%= subject.id %>/edit">Edit</a></button>
              <form action="/smoothieshare/<%= subject.id %>/destroy" method="post">
                <button type="submit" class="delete_subject">Delete</button>
              </form>
              <% } %>
          </div>

          <!-- Footer -->
          <%- include ('../static/partials/footer.ejs') %>

    </div>

    <!-- Scripts -->
    <%- include ('../static/partials/scripts.ejs') %>

</body>

</html>