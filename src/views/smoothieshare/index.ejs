<html>
	<head>
		<title>SuperSmoothie</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="../css/main.css" />
		<noscript><link rel="stylesheet" href="../css/noscript.css" /></noscript>
		<style>
			  img {
				  height: 25%;
				  width: 29%;
				  border-radius: 22px;
			  }
			  section, p {
				  font-weight: bold;
        }
        .smoothieshare_index{
          background-color: lightgray;;
        }
			  </style>
	</head>
	<body class="is-preload">
		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
						<div class="inner">

							<!-- Logo -->
								<a href="/" class="logo">
									<span class="symbol"><img src="../images/logo.svg" alt="" /></span><span class="title">SuperSmoothie</span>
								</a>

							<!-- Nav -->
								<nav>
									<ul>
										<li><a href="#menu">Menu</a></li>
									</ul>
								</nav>
				<!-- Menu -->
					<nav id="menu">
						<h2>Menu</h2>
						<ul>
							<% if (currentUser) {%>
								<li><a href="/">Home</a></li>
							<li><a href="/yousmoothie">YouSmoothie</a></li>
							<li><a href="/smoothieshare">SmoothieShare</a></li>
							<li><a href="/smoothieshare/signout">Sign Out</a></li>
								<% } %>
						 <% if (!currentUser) {%>
							<li><a href="/">Home</a></li>
							<li><a href="/yousmoothie">YouSmoothie</a></li>
							<li><a href="/smoothieshare">SmoothieShare</a></li>
							<li><a href="/smoothieshare/signup">Create SmoothieShare Account</a></li>
							<li><a href="/smoothieshare/signin">Sign In</a></li>
							<% } %>
							
						</ul>
					</nav>


				<!-- Main -->
					<div id="main">
            <div>
            <% if(currentUser) { %>
              <a href="smoothieshare/new">
                <button class="post_recipe">Post Smoothie</button>
            </a>
              <% } %>
            </div>
              <br>
              <div class="smoothieshare_index">
                <div class="subject_title">
                  <ul>
                  <% subjectItem.forEach((subject) => { %>
                      <li>
                      <a href="/smoothieshare/<%= subject.id %>">
                   <p><%= subject.title %></p> 
                  </a>
                </li>
                    <% }) %>
                  </ul>

                </div>
              </div>
					</div>

			<!-- Footer -->
			<footer id="footer">
				<div class="inner">
					<section>
						<h2>Get in touch</h2>
						<form method="post" action="#">
							Coming soon!
						</form>
					</section>
					<section>
						<h2>Share</h2>
						<ul class="icons">

							<li>							<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text="I love #supersmoothies! the best smoothies i've ever seen! #fitness #health #smoothies #yum" data-lang="en" data-show-count="false">Tweet</a>
								<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
							</li>
						</ul>
					</section>
					<ul class="copyright">
						<li>&copy; Untitled. All rights reserved</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
					</ul>
				</div>
			</footer>

	</div>

<!-- Scripts -->
	<script src="../js/jquery.min.js"></script>
	<script src="../js/browser.min.js"></script>
	<script src="../js/breakpoints.min.js"></script>
	<script src="../js/util.js"></script>
	<script src="../js/main.js"></script>

</body>
</html>